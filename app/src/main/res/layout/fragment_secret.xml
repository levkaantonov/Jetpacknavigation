<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.SecretFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:text="@string/this_is_secret_text_view"/>

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_secret_button_text"/>
    <Button
        android:id="@+id/closeBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_whole_box_button_text"/>

</LinearLayout>