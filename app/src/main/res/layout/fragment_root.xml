<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.RootFragment">

    <Button
        android:id="@+id/greenBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#008800"
        android:text="@string/green_box_button_text"/>
    <Button
        android:id="@+id/yellowBoxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffff00"
        android:textColor="@color/black"
        android:text="@string/yellow_box_button_text"/>

</LinearLayout>